server {
    listen 80;
    server_name _;
    access_log /var/log/nginx/{{ coin }}_access.log;
    error_log /var/log/nginx/{{ coin }}_error.log notice;

    location / {
        auth_basic "Restricted access to this site";
        auth_basic_user_file /etc/nginx/passwords;
        proxy_pass http://127.0.0.1:{{ bitcoin_rpcport }};
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Authorization "Basic {{ base64_password.stdout }}";
    }

    location /aws/health {
        return 200 'up';
    }

}
